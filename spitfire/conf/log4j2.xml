<configuration status="WARN">

  <loggers>qsdf
    <root level="WARN">
      <appender-ref ref="Console" />
      <appender-ref ref="File" />
    </root>
    <logger name="io.datalayer" level="WARN" additivity="false">
      <appender-ref ref="Console" />
      <appender-ref ref="File" />
    </logger>

    <logger name="org.apache.zeppelin" level="WARN" additivity="false">
      <appender-ref ref="Console" />
      <appender-ref ref="File"/>
    </logger>

    <logger name="org.apache.spark" level="WARN" additivity="false">
      <appender-ref ref="Console" />
      <appender-ref ref="File"/>
    </logger>

    <!-- <logger name="org" level="WARN"> -->
    <!-- <appender-ref ref="Null"/> -->
    <!-- </logger> -->

  </loggers>

  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{[%d{yyyy-MM-dd z HH:mm:ss.SSS}] [%level] - %msg%n}" />
      <!--
        <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
      -->
      <!--
        %l
        (%C.java:%L):%M
      -->
  </Console>
<!--
  <Console name="Null" target="SYSTEM_OUT">
    <PatternLayout pattern=""/>
  </Console>
-->
    <File name="File" fileName="/dla/datalayer-spitfire/logs/datalayer-spitfire.log">
      <PatternLayout pattern="%highlight{[%d{yyyy-MM-dd z HH:mm:ss.SSS}] [%level] - %msg%n}" />
    </File>
  </appenders>

</configuration>
